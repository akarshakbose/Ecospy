<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team9.camp.microsoft.ecospy.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/back1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backwhite"
        android:scaleType="fitXY"/>
    <EditText
        android:id="@+id/serverAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5530AC50"
       android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/refreshIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新服务器地址"
        android:background="#5530AC50"
        android:layout_below="@+id/serverAdd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/back1"
        android:gravity="center"
        android:background="#eefafb"
        >
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn1_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn1_2"
                android:background="#00000000"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我"
                android:gravity="center"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn1_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn2"
                android:background="#00000000"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游戏"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn1_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn3"
                android:background="#00000000"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分享"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn1_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn4"
                android:background="#00000000"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已回收"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn1_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn5"
                android:background="#00000000"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="离开"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
